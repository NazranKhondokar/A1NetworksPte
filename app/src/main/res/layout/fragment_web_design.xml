<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxxitsolution.a1networkspte.DrawerFragments.WebDesignFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/basic"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#43A047"
                    android:gravity="center"
                    android:text="Basic"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#4CAF50"
                    android:gravity="center"
                    android:text="Blog Website"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#81C784"
                    android:gravity="center"
                    android:text="Number of Pages 5"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#A5D6A7"
                    android:gravity="center"
                    android:text="Responsive Design"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#C8E6C9"
                    android:gravity="center"
                    android:text="Revision 2 Times"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E8F5E9"
                    android:gravity="center"
                    android:text="Delivery Time 3 Days"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/basicOrder"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#4CAF50"
                    android:text="Order Now (100$)"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/standard"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#827717"
                    android:gravity="center"
                    android:text="Standard"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#9E9D24"
                    android:gravity="center"
                    android:text="Small Business Website"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#AFB42B"
                    android:gravity="center"
                    android:text="Number of Pages 10"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#C0CA33"
                    android:gravity="center"
                    android:text="Responsive Design"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#CDDC39"
                    android:gravity="center"
                    android:text="Revision 10 Times"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#D4E157"
                    android:gravity="center"
                    android:text="Delivery Time 5-7 Days"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/standardOrder"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#827717"
                    android:text="Order Now (200$)"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/premium"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#E65100"
                    android:gravity="center"
                    android:text="Premium"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#EF6C00"
                    android:gravity="center"
                    android:text="E-commerce Website"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F57C00"
                    android:gravity="center"
                    android:text="Number of Pages 10"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="Responsive Design"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FF9800"
                    android:gravity="center"
                    android:text="E-Commerce Functionality"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFA726"
                    android:gravity="center"
                    android:text="Revision 20 Times"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFB74D"
                    android:gravity="center"
                    android:text="Delivery Time 15-20 Days"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/premiumOrder"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E65100"
                    android:text="Order Now (600$)"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
