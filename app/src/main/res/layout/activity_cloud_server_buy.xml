                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Model"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

